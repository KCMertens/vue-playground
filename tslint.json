{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "arrow-parens": false,
    "no-trailing-whitespace": false,
    "trailing-comma": [
      true, 
      {
        "multiline": {
          "arguments": "never"
        } 
      }
    ],
    "eofline": false
  }
}
